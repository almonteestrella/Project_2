        }
        else if (nameCatego === 'Nails') {
          icon = IconSeven
        }
        else if (nameCatego === 'Tattooing') {
          icon = IconEight
        }
        return icon
      }
    };
    addToMap(700)


    function showMarkers(input, img) {
      $(input).change("click", function () {
        if ($(this).is(':checked')) {
