<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  {{!-- Leaflet --}}
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
    integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
    crossorigin="" />
  <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
    integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
    crossorigin=""></script>
</head>

<body>
  {{{body}}}




  <script>

    //leaflet setup
    var mymap = L.map('mapid').setView([43.6532, -79.3832], 13);

    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoiY2lubmFtb21lIiwiYSI6ImNrMGZxbTQ5ZjAyNzQzaXM4am90Mjg0NWkifQ.hbdP4yMD7PFsKvw-PRzVuA', {
      attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
      maxZoom: 18,
      id: 'mapbox.streets',
      accessToken: 'your.mapbox.access.token'
    }).addTo(mymap);
    
    
    //icon1
    var IconOne = L.icon({
      iconUrl: '/images/placeholder.png',
      //shadowUrl: '/images/icon-shadow-pointer.png',
      iconSize: [38, 95], // size of the icon
      shadowSize: [50, 64], // size of the shadow
      iconAnchor: [22, 94], // point of the icon which will correspond to marker's location
      shadowAnchor: [4, 62],  // the same for the shadow
      popupAnchor: [-3, -76] // point from which the popup should open relative to the iconAnchor
    });

    //pop up
    let latlng = L.latLng(43.6532, -79.38);  //to change to a marker location!
    let marker = L.marker(latlng, { icon: IconOne }).addTo(mymap);

    //to change to inspecrion history!
    let popupContent = "hello";

    marker.bindPopup(popupContent).openPopup();

    //icon class
    
    var PlaceholderIcon = L.Icon.extend({
      options: {
        iconUrl: '/images/placeholder.png',
        iconSize:     [38, 95],
        shadowSize:   [50, 64],
        iconAnchor:   [22, 94],
        shadowAnchor: [4, 62],
        popupAnchor:  [-3, -76]
      }
    });

    var greenIcon = new PlaceholderIcon({iconUrl: '/images/green.png'}),
	    blueIcon = new PlaceholderIcon({iconUrl: '/images/blue.png'}),
	    orangeIcon = new PlaceholderIcon({iconUrl: '/images/orange.png'});
      purpleIcon = new PlaceholderIcon({iconUrl: '/images/purple.png'});
      redIcon = new PlaceholderIcon({iconUrl: '/images/red.png'});
      pinkIcon = new PlaceholderIcon({iconUrl: '/images/pink.png'});
      yellowIcon = new PlaceholderIcon({iconUrl: '/images/yellow.png'});
      

      L.icon = function (options) {
	    return new L.Icon(options);
      };


      L.marker([43.6532, -79.38], {icon: greenIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: redIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: orangeIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: pinkIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: yellowIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: blueIcon}).addTo(mymap).bindPopup("Hello.");
      L.marker([43.6532, -79.38], {icon: purpleIcon}).addTo(mymap).bindPopup("Hello.");

    

  </script>


</body>

</html>